<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Applications</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 50px;
            background-color: #f8f9fa;
        }
        .container {
            max-width: 800px;
            margin: auto;
        }
        h2 {
            margin-bottom: 20px;
            text-align: center;
            color: #007bff;
        }
        .table {
            background-color: #fff;
            border-radius: 10px;
        }
        .table th, .table td {
            vertical-align: middle;
        }
        .table th {
            background-color: #007bff;
            color: #fff;
            border-color: #dee2e6;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Applications</h2>
        <% if (applications.length === 0) { %>
            <div class="alert alert-info" role="alert">
                No applications found.
            </div>
        <% } else { %>
            <form id="applicationSelectionForm" method="POST" action="/applications/<%= jobId %>">  <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>Application ID</th>
                                <th>Jobseeker</th>
                                <th>Email</th>
                                <th>Contact</th>
                                </tr>
                        </thead>
                        <tbody>
                            <% applications.forEach(application => { %>
                                <tr>
                                    <td>
                                        <input type="radio" name="selectedApplication" value="<%= application._id %>">
                                    </td>
                                    <td><%= application._id %></td>
                                    <td><%= application.jobseeker_id.name %></td>
                                    <td><%= application.jobseeker_id.email %></td>
                                    <td><%= application.jobseeker_id.phoneNumber %></td>
                                    </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                <button type="submit" class="btn btn-primary">Select Candidate</button>
            </form>
        <% } %>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
