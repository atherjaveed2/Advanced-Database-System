<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Applications</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 50px;
            background-color: #f8f9fa;
        }
        .container {
            max-width: 800px;
            margin: auto;
        }
        h2 {
            margin-bottom: 20px;
            text-align: center;
            color: #007bff;
        }
        .table {
            background-color: #fff;
            border-radius: 10px;
        }
        .table th, .table td {
            vertical-align: middle;
        }
        .table th {
            background-color: #007bff;
            color: #fff;
            border-color: #dee2e6;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Applications</h2>
        <% if (applications.length === 0) { %>
            <div class="alert alert-info" role="alert">
                No applications found.
            </div>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Select</th>
                            <th>Application ID</th>
                            <th>Jobseeker</th>
                            <th>Email</th>
                            <th>Contact</th>
                            <!-- Add more table headers as needed -->
                        </tr>
                    </thead>
                    <tbody>
                        <% applications.forEach(application => { %>
                            <tr>
                                <td>
                                    <!-- Add radio button -->
                                    <input type="radio" name="selectedApplication" value="<%= application._id %>">
                                </td>
                                <td><%= application._id %></td>
                                <td><%= application.jobseeker_id.name %></td>
                                <td><%= application.jobseeker_id.email %></td>
                                <td><%= application.jobseeker_id.phoneNumber %></td>
                                <!-- Add more table cells to display other application details -->
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
    <div class="container">
        <button id="viewApplicationButton" class="btn btn-primary" onclick="viewSelectedApplication()">View Selected Application</button>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // JavaScript function to handle button click event
        function viewSelectedApplication() {
            console.log("Button clicked!"); // Check if the button click event is triggered
            // Get the selected application ID
            const selectedApplication = document.querySelector('input[name="selectedApplication"]:checked');
            if (selectedApplication) {
                console.log(selectedApplication); // Check if the selected radio button is found
                const selectedApplicationId = selectedApplication.value;
                // Example action: Log the selected application ID
                console.log("Selected Application ID:", selectedApplicationId);
                // Perform further actions based on the selected application ID
                // For example, display details or navigate to another page
            } else {
                console.log("No application selected.");
            }
        }
    </script>
</body>
</html>
